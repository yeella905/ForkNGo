<!DOCTYPE html>
<html lang="en">

<head>
  <title>ForkNGo - Restaurant</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/cart-styles.css">

  <!-- Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <div class="header-content">
     <h1>Welcome to ForkNGo ðŸ¥™</h1>
      <div class="user-actions">
        <% if (user) { %>
          <p class="nav-item nav-link">Logged in as: <%= user.name %></p>
          <a href="/logout" title="Link to logout">Logout</a>
         <% } else { %>
         <a href="/login" title="Link to login page">Login</a>
        <% } %>
        <div class="shopping-cart-link">
          <a href="/orders" title="Go to Shopping cart">Shopping Cart</a>
        </div>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="main-content">
      <main>
        <h2>Our Menu</h2>
        <div class="menu">
          <% foodItems.forEach(foodItem => { %>
            <div class="food-item">
              <img src="<%= foodItem.image_url %>" alt="<%= foodItem.name %>" class="food_item_image">
              <div class="food-item-info">
                <h3 class="food-item-name"><%= foodItem.name %></h3>
                <p class="food-item-description"><%= foodItem.description %></p>
                <div class="food-item-price">$<%= foodItem.price %></div>

                <div class="food-item-actions">
                  <textarea class="special-request-input" placeholder="Special requests..."></textarea>

                  <button class="add-to-cart-btn"
                    data-food-id=""
                    data-food-name=""
                    data-food-price="">
                    Add to Cart
                  </button>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </main>
    </div>

    <div class="sidebar">
      <div class="cart-container">
        <div class="cart-header">
          <h2>Your Order</h2>
        </div>

        <div id="cart-items" class="cart-items">
          <div class="empty-cart">Your cart is empty</div>
        </div>

        <div id="cart-total" class="cart-total">
          <div class="cart-subtotal">Subtotal: $0.00</div>
          <div class="cart-tax">Tax: $0.00</div>
          <div class="cart-total-amount">Total: $0.00</div>
        </div>

        <div class="cart-actions">
          <button id="checkout-button" class="checkout-button">Proceed to Checkout</button>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <p>ForkNGo Â© 2025</p>
  </footer>

</body>

</html>
