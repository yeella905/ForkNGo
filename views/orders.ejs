<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ForkNGo - Your Cart</title>

  <!-- App CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- Scripts -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <div class="header-content">
      <h1>ForkNGo ðŸ¥™</h1>

      <div class="user-actions">
        <% if (user) { %>
          <p class="nav-item nav-link">Logged in as: <%= user.name %></p>
          <a href="/logout">Logout</a>
          <% } else { %>
            <a href="/login">Login</a>
          <% } %>
        <div class="shopping-cart-link">
          <a href="/">Menu</a>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="main-content">
      <main>
        <h2>Your Cart</h2>

        <div id="local-cart-container">
          <div class="cart-header">
            <h3>Current Order</h3>
          </div>

        <div id="cart-items" class="cart-items">
          <div class="empty-cart">Your cart is empty</div>
        </div>

        <div id="cart-total" class="cart-total">
          <div class="cart-subtotal">Subtotal: $0.00</div>
          <div class="cart-tax">Tax: $0.00</div>
          <div class="cart-total-amount">Total: $0.00</div>
        </div>

        <div class="cart-actions">
          <button id="checkout-button" class="checkout-button">Proceed to Checkout</button>
        </div>
        </div>

        <% if (orders && orders.length > 0) { %>
          <h2>Your Orders</h2>
          <div class="orders-container">
            <% orders.forEach((order) => { %>
              <div class="order-card">
                <div class="order-header">
                  <h3>Order #<%= order.id %></h3>
                  <div class="order-times">
                    <p><strong>Selected pickup:</strong> <%= new Date(order.user.selected_pickup_time).toLocaleString() %></p>
                    <p><strong>Estimated pickup:</strong> <%= new Date(order.estimated_pickup_time).toLocalsString() %></p>
                    <% if (order.actual_pickup_time) { %>
                      <p><strong>Actual pickup:</strong> <%= new Date(order.actual_pickup_time).toLocalsString() %> </p>
                    <% } %>
                  </div>
                </div>

              <div class="order-items">
                <% let orderSubtotal = 0; %>
                <% let orderTax = 0; %>

                <% order.items.forEach((item) => { %>
                  <% orderSubtotal += parseFloat(item.price) * item.quantity; %>
                  <% orderTax += parseFloat(item.tax) * item.quantity; %>

                  <div class="order-item">
                    <div class="order-item-image">
                      <img src="<%= item.image_url %>" alt="<%= item.name %>">
                    </div>
                    <div class="order-item-details">
                      <h4><%= item.name %></h4>
                      <p>Quantity: <%= item.quantity %></p>
                      <p>Price: $<%= parseFloat(item.price).toFixed(2) %></p>
                      <% if (item.special_request) { %>
                        <p class="special-request">Note: <%= item.special_request %></p>
                      <% } %>
                    </div>
                  </div>
                <% }); %>

                 <div class="order-total">
                    <p><strong>Subtotal:</strong> $<%= orderSubtotal.toFixed(2) %></p>
                    <p><strong>Tax:</strong> $<%= orderTax.toFixed(2) %></p>
                    <p><strong>Total:</strong> $<%= (orderSubtotal + orderTax).toFixed(2) %></p>
                 </div>
               </div>
              </div>
            <% }); %>
          </div>
        <% } else if (user) { %>
          <div class="no-orders">
            <h3>You haven't placed any orders yet</h3>
            <p>Browse our menu to place your first order!</p>
            <a href="/" class="browse-menu-btn">Browse Menu</a>
          </div>
        <% } %>
      </main>
    </div>
  </div>

</body>
</html>
